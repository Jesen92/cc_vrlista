<div class="page-header head-page">
  <h1>Novi Projekt</h1>
</div>

<%= simple_form_for @project, html: {class: 'form-horizontal'} do |f| %>
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
      <%= f.input :title, label: "Naziv projekta", required: true %>
      <%= f.input :company_id, :as => :select, label: "Kupac", required: true, :collection => Company.all.map {|kupac| [kupac.name, kupac.id]} %>
      <%= f.input :description, label: "Opis posla", required: true %>

    <%= f.button :submit, "Kreiraj projekt", class: "btn btn-success" %>
    <%= link_to "Cancel", projects_index_path, class: "btn btn-default" %>
      </div>
    </div>

<% end %>
